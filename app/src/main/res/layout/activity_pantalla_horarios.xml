<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantalla_horarios">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-35dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="@color/Blue"
            android:text="HORARIOS DISPONIBLES"
            android:textColor="@color/black"
            android:textSize="35dp" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="324dp">

            <RadioButton
                android:id="@+id/radiol_button_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:30-16:00"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/radiol_button_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:00-16:30"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/radiol_button_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:30-17:00"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/radiol_button_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:30-17:00"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <Button
                android:id="@+id/button_Continuar"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_gravity="center"
                android:layout_margin="80dp"
                android:text="CONTINUAR" />

            <Button
                android:id="@+id/Button_Save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="80dp"
                android:text="GUARDAR" />

            <Button
                android:id="@+id/button_delete"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_gravity="center"
                android:layout_margin="80dp"
                android:text="ELIMINAR" />

        </RadioGroup>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>