<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantalla_horarios">

    <ImageView
        android:id="@+id/image_user"
        android:layout_width="101dp"
        android:layout_height="96dp"
        android:layout_margin="25dp"
        android:background="@drawable/userdoc"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="85dp" />

    <TextView
        android:id="@+id/TextNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lugar: Clinica del Sur"
        android:textColor="@color/black"
        app:layout_contrainGuide
        tools:ignore="MissingContraints"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="121dp" />

    <TextView
        android:id="@+id/TextNombrePaciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juan Zeballos Ortega"
        android:textColor="@color/black"
        app:layout_contrainGuide
        tools:ignore="MissingContraints"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="85dp" />

    <TextView
        android:id="@+id/TextReserva"
        android:layout_width="82dp"
        android:layout_height="27dp"
        android:text="AGENDAR"
        android:textColor="@color/black" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="324dp">

        <RadioButton
            android:id="@+id/radiol_button_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:30-16:00"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/radiol_button_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16:00-16:30"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/radiol_button_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16:30-17:00"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/radiol_button_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16:30-17:00"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button_save_2"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:text="CONTINUAR"
            tools:layout_editor_absoluteX="155dp"
            tools:layout_editor_absoluteY="296dp" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>