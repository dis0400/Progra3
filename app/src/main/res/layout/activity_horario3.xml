<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".horario3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="284dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="@color/Blue"
            android:text="HORARIOS DISPONIBLES"
            android:textColor="@color/black"
            android:textSize="35dp" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="324dp">

            <RadioButton
                android:id="@+id/radiol_button_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:30-17:00"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/radiol_button_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:30-18:00"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/radiol_button_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:00-18:30"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/radiol_button_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:30-19:00"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <Button
                android:id="@+id/button_save_2"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_margin="80dp"
                android:layout_gravity="center"
                android:text="CONTINUAR" />

        </RadioGroup>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

